#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/runtime:5.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /src
COPY ["Aditya.Strategy.CashFuturesArbitrage/Aditya.Strategy.CashFuturesArbitrage.csproj", "Aditya.Strategy.CashFuturesArbitrage/"]
RUN dotnet restore "Aditya.Strategy.CashFuturesArbitrage/Aditya.Strategy.CashFuturesArbitrage.csproj"
COPY . .
WORKDIR "/src/Aditya.Strategy.CashFuturesArbitrage"
RUN dotnet build "Aditya.Strategy.CashFuturesArbitrage.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Aditya.Strategy.CashFuturesArbitrage.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Aditya.Strategy.CashFuturesArbitrage.dll"]